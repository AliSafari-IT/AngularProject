{
    "version": "2.0.0",
    "tasks": [
               {
            "label": "NgServe",
            "type": "shell",
            "command": "git pull && ng serve --port 4200 --open --host 0.0.0.0",
            "options": {
                "cwd": "${workspaceFolder}/CrewControl"
            },
            "isBackground": true,
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": [
                {
                    "owner": "javascript",
                    "pattern": {
                        "regexp": "^.+$",
                        "file": 1,
                        "location": 2,
                        "message": 3
                    },
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": "^.*Starting development server.*$",
                        "endsPattern": "^.*Compiled successfully.*$"
                    }
                }
            ]
        }
       
    ]
}